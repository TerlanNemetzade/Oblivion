            <div class="container">

                <a style="color:white" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OBLIVION</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                @*<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">*@
            <div class="collapse navbar-collapse justify-content-end">

                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.Identity.Name == "oblivion33")
                    {

                        <ul class="navbar-nav ">
                            @*flex-grow-1*@
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Product" asp-action="Index">PRODUCT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">SHOW CART</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Order" asp-action="Ship">ORDERS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Product" asp-action="GetProducts">CRUD PRODUCT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="Index">USERS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Role" asp-action="Index">ROLES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">CONTACT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">LOGOUT</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav ">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">HOME</a>
                            </li>
                            <li>
                                <a class="nav-link text-white" asp-controller="Product" asp-action="Index">PRODUCT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">SHOW CART</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">CONTACT</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="User" asp-action="EditProfile">EDIT PROFILE</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">LOGOUT</a>
                            </li>
                        </ul>
                    }

                }
                else
                {
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">HOME</a>
                        </li>
                        <li>
                            <a class="nav-link text-white" asp-controller="Product" asp-action="Index">PRODUCT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Contact">CONTACT</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Cart" asp-action="Index">SHOW CART</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Login">LOG IN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Account" asp-action="Register">REGISTER</a>
                        </li>
                    </ul>
                }



            </div>
            </div>

        </nav>
    </header>
    <br />

    @{ 
        
    }
    <section @*style="background: url(https://www.sprim.com/wp-content/uploads/2018/12/Digital-AI-Tools-Hero.jpg) center center no-repeat;background-size: auto"*@>
        <div class="container">
            <main role="main" class="pb-3">
                <div class="row">
                    @if (TempData["message"] != null)
                    {
                        <div class="alert alert-primary">@TempData["message"]</div>
                    }
                </div>

                
               
                <div class="row">
                    <div class="col-4">
                        @await Component.InvokeAsync("CategoryList")
                    </div>
                    <div class="col-8">@RenderBody()</div>
                </div>

            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - Oblivion - <a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </section>

</body>
</html>
