@model ProductModel
@*<div style="color:darkblue" >@ViewBag.Message</div>*@
@*<div>@ViewData["Message"]</div>*@ @*Bu iksi eyni kodu icra edir ve eyni seyi yazir netice olaraq*@
@{
    Layout = "_Layout";
}


<div class="">@ViewBag.Message</div>

<div class="container mb-1 mt-1" style="margin:10px;overflow-x:auto;">

    <h1 class="alert-heading" style="color:white">Products</h1>

    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>CategoryId</th>
                <th>Description</th>
                <th>UnitPrice</th>
                <th>UnitsInStock</th>
                <th>
                    <a class="btn btn-success bgprice" asp-action="Add" asp-controller="Product">Create Product</a>
                </th>

            </tr>
        </thead>

        <tbody>
            @*@{
                    int i = 1;
                }*@

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductId</td>
                    <td>@item.ProductName</td>
                    <td>@item.CategoryId</td>
                    <td>@item.Description</td>
                    <td>@item.UnitPrice</td>
                    <td>@item.UnitsInStock</td>
                    <td>
                        <a class="btn btn-success bgprice" asp-route-productId="@item.ProductId" asp-action="Update" asp-controller="Product">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger bgprice" asp-route-productId="@item.ProductId" asp-action="Delete" asp-controller="Product">Delete</a>
                    </td>
                </tr>

                //i++;
            }
        </tbody>


        <tfoot>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>CategoryId</th>
                <th>Description</th>
                <th>UnitPrice</th>
                <th>UnitsInStock</th>
            </tr>
        </tfoot>
    </table>


</div>

<partial name="_ValidationScriptsPartial" />
