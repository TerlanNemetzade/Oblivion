@model ProductModel
    @{

        Layout = "gtProductLayout";
    }

    <h2 style="color:black" class="">Products</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>UnitPrice</th>
            </tr>
        </thead>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.UnitPrice $</td>
                <td><a class="btn btn-sm btn-success " asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.ProductId">Add to cart</a></td>
            </tr>
        }

    </table>


