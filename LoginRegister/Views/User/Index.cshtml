@model IEnumerable<User>
<div class="alert-danger">@ViewBag.Message</div>
<br />
<br />
<h1 class="bg-dark justify-content-md-end text-white">All Users</h1>
<a asp-controller="Account" asp-action="Register" class="btn btn-success">Create a User</a>
<br />
<br />
<table class="table table-sm table-bordered table-bordered">

    <tr><th>ID</th><th>Name</th><th>Email</th><th>Update</th><th>Delete</th></tr>
    @foreach (var user in Model)
    {
        
        @if (user.EmailConfirmed == false)
        {
            <tr class="text-muted">
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td><a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@user.Id">Update</a></td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>

                <td><a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-route-id="@user.Id">Update</a></td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
</table>