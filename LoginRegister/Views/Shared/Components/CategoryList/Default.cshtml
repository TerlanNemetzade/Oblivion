@model CategoryListViewModel




<h2 style="color:black">Category</h2>
<div class="list-group" style="">
    <a href="/product/index" class="list-group-item">All Products</a>

    @foreach (var category in Model.Categories)
    {
        var css = "list-group-item";
        var style = "color:black;font-size:18px;font-family:'Times New Roman'";
        if (category.CategoryId == Model.CurrentCategory)
        {
            css += " active";// css kodunu yuxardakini eger her hansisa bir misra secilibse onda sonuna active elave edir kodda icra olunur
            style += ";background-color:#ffffff";
        }
        <a href="/product/index?category=@category.CategoryId" class="@css" style="@style">@category.CategoryName</a>
    }
</div>

